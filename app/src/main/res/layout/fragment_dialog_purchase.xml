<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:background="@drawable/bg_round_dialog_purchase"
              android:orientation="vertical"
              tools:context=".dialog.DialogPurchaseFragment">

    <TextView
            android:paddingTop="@dimen/spacing_small"
            android:text="Notification"
            style="@style/TextTitleLarge"/>

    <ImageView
            android:paddingTop="@dimen/spacing_small"
            android:src="@drawable/ic_dialog_tick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:layout_marginTop="@dimen/spacing_tiny"
            android:paddingBottom="@dimen/spacing_small"
            android:text="Purchase order success!"
            style="@style/TextContentLarge"/>

    <View
            android:background="@drawable/bg_icon_status_uncheck"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>

    <TextView
            android:padding="@dimen/spacing_small"
            android:text="Go to service available"
            android:textColor="#4a90e2"
            style="@style/TextTitleLarge"/>


</LinearLayout>