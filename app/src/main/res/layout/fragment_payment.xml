<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:padding="@dimen/spacing_tiny"
              tools:context=".purchase.PaymentFragment">


    <TextView
            android:paddingTop="@dimen/spacing_huge"
            android:text="Payment method"
            style="@style/TextTitleLarge"/>

    <RadioGroup


            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <RadioButton
                android:layout_marginTop="@dimen/spacing_small"
                android:layoutDirection="ltr"
                android:text=" COD - Nhận thẻ dịch vụ và thanh toán tại nhà"
                style="@style/TextContentLarge"/>

        <View
                android:background="@drawable/bg_icon_status_uncheck"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>

        <RadioButton
                android:layout_marginTop="@dimen/spacing_large"
                android:layoutDirection="ltr"
                android:text=" Chuyển khoản và nhận dịch vụ qua email"
                style="@style/TextContentLarge"/>
        <View
                android:background="@drawable/bg_icon_status_uncheck"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>

        <RadioButton
                android:layout_marginTop="@dimen/spacing_large"
                android:layoutDirection="ltr"
                android:text=" Thanh toán bằng thẻ tín dụng"
                style="@style/TextContentLarge"/>

        <View
                android:background="@drawable/bg_icon_status_uncheck"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>

    </RadioGroup>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <Button
                android:layout_gravity="center"
                android:id="@+id/btnPayment"
                android:layout_width="250dp"
                android:layout_height="45dp"
                android:layout_marginTop="74dp"
                android:background="@drawable/bg_round_navy_blue_state"
                android:gravity="center"
                android:text="Continue payment"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textColor="@color/yellow_bright"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>