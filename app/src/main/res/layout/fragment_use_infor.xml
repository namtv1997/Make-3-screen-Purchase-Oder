<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent" android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="@dimen/spacing_tiny"
              tools:context=".purchase.UseInforFragment">


    <include layout="@layout/include_delivery_address"/>

    <TextView
            android:text="Use other address"
            android:padding="@dimen/spacing_tiny"
            style="@style/TextTitleNormal"/>

    <LinearLayout
            android:orientation="horizontal"
            android:padding="@dimen/spacing_tiny"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:text="Mobile"
                android:layout_weight="1"
                style="@style/TextTitleNormal"/>

        <TextView
                android:text="+84 955 896 9688"
                android:gravity="end"
                android:padding="@dimen/spacing_tiny"
                android:layout_weight="1"
                style="@style/TextContentLarge1"/>

        <ImageView
                android:paddingLeft="@dimen/spacing_tiny"
                android:layout_gravity="end|center"
                android:src="@drawable/ic_close_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </LinearLayout>

    <View
            android:background="@drawable/bg_icon_status_uncheck"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>

    <LinearLayout
            android:orientation="horizontal"
            android:padding="@dimen/spacing_tiny"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:text="Address"
                android:layout_weight="1"
                style="@style/TextTitleNormal"/>

        <TextView
                android:text="208 Trung Hoà, Cầu Giấy, Hà Nội"
                android:gravity="end"
                android:padding="@dimen/spacing_tiny"
                android:layout_weight="1"
                style="@style/TextContentLarge1"/>

        <ImageView
                android:paddingLeft="@dimen/spacing_tiny"
                android:layout_gravity="end|center"
                android:src="@drawable/ic_close_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </LinearLayout>

    <View
            android:background="@drawable/bg_icon_status_uncheck"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <Button
                android:id="@+id/btnUserInfor"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="@dimen/spacing_large"
                android:background="@drawable/bg_round_navy_blue_state"
                android:gravity="center"
                android:text="Use information to order"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textColor="@color/yellow_bright"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>