<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/navy_blue_dark</item>
    </style>



    <!--Text Style-->
    <style name="TextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextTitleLarge" parent="TextStyle">
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textColor">@color/navy_blue_dark</item>

    </style>

    <style name="TextTitleNormal" parent="TextStyle">
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textColor">@color/navy_blue_dark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextContentNormal" parent="TextStyle">
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textColor">@color/gray_60</item>
    </style>

    <style name="TextContentLarge" parent="TextStyle">
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textColor">#001a39</item>
    </style>

    <style name="TextContentLarge1" parent="TextStyle">
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textColor">#777777</item>
    </style>

    <style name="TextContentTiny" parent="TextStyle">
        <item name="android:textSize">@dimen/font_tiny</item>
        <item name="android:textColor">@color/gray_60</item>
    </style>

    <!--Button Style-->
    <style name="ButtonStyle" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonFacebook" parent="ButtonStyle">
        <item name="android:background">@drawable/bg_round_blue_fb_state</item>
        <item name="android:drawableLeft">@drawable/ic_fb_white</item>
        <item name="android:paddingLeft">@dimen/spacing_large</item>
        <item name="android:paddingRight">@dimen/spacing_large</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:text">@string/button_facebook</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ButtonYellowRound" parent="ButtonStyle">
        <item name="android:layout_width">@dimen/button_width</item>
        <item name="android:background">@drawable/bg_round_yellow_state</item>
        <item name="android:textColor">@color/navy_blue_dark</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ButtonNavyRound" parent="ButtonStyle">
        <item name="android:background">@drawable/bg_round_navy_blue_light</item>
        <item name="android:textColor">@color/yellow_bright</item>
    </style>

    <style name="ButtonBorderless" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonBorderlessTextNormal" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textColor">@color/gray_60</item>
    </style>

    <!--EditText Style-->


    <style name="ViewLineGray">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/gray_30</item>
    </style>

    <style name="RycyclerviewHorizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="CustomRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/custom_ratingbar_selector</item>
        <item name="android:minHeight">35dp</item>
        <item name="android:maxHeight">35dp</item>
    </style>

</resources>
